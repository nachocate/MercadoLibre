<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NuevoReclamoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/text_nuevoReclamo"
            android:layout_width="380dp"
            android:layout_height="35dp"
            android:text="@string/nuevo_reclamo"
            android:textSize="25sp"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/editText_tituloNuevoReclamo"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="Título del reclamo"
            android:inputType="text"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinner_tipoReclamo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinner_direccion"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/editText_direccionNuevoReclamo"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="Dirección física del reclamo"
            android:inputType="text"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_obtenerUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_obtenerUbicacion"
                android:onClick="obtenerUbicacion"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/image_checkUbicacionGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:visibility="gone"
                android:src="@drawable/ic_check_circle_green_24dp" />
        </LinearLayout>



        <EditText
            android:id="@+id/editText_descripcionNuevoReclamo"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:hint="Descripción del reclamo"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_seleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_seleccionarImagen"
            android:onClick="onclick"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp"
            />

        <ImageView
            android:id="@+id/imagenId"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancelarNuevoReclamo"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@drawable/ic_cancel_black_24dp"
                android:text="@string/button_nuevoReclamoCancelar"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/button_enviarNuevoReclamo"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button_enviarNuevoReclamo"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@drawable/ic_check_circle_black_24dp"
                android:text="@string/button_nuevoReclamoEnviar"
                android:textColor="@color/colorAccent"
                android:textSize="